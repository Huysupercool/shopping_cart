@model List<shopping_cart.Data.Product>
			<div class="col-sm-9 padding-right">
				<div class="features_items">
					<!--features_items-->
					<h2 class="title text-center">Features Items</h2>
					@foreach (var p in Model)
					{
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="single-products">
									<div class="productinfo text-center">
										<a href="@p.Image">
											<img style="width: 150px; height: 300px; object-fit: cover;" class="img-responsive chain" alt="Product Image" src="@p.Image" />
										</a>
										<p>Tên Sản Phẩm : @p.Name</p>
										<p>Giá tiền : @p.Price</p>
									</div>
									<div class="product-overlay">
										<div class="overlay-content text-center">
											<h2>@p.Name</h2>
											<a href="../Product/Detail/@p.Id" class="btn btn-default add-to-cart"><i class="fa fa-light fa-magnifying-glass"></i> Detail</a>
								<a asp-route="addcart" asp-route-productid="@p.Id" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i> Add to cart</a>
										</div>
									</div>
								</div>
								<div class="choose">
									<ul class="nav nav-pills nav-justified">
										<li><a href=""><i class="fa fa-plus-square"></i> Add to wishlist</a></li>
										<li><a href=""><i class="fa fa-plus-square"></i> Add to compare</a></li>
									</ul>
								</div>
							</div>
						</div>
					}
				</div><!--features_items-->
			</div>